<div id="postDeleteDialog" uk-modal>
    <div class="uk-modal-dialog relative mx-auto bg-white rounded-lg shadow-xl w-[400px]">
        @*header*@
        <!-- Modal Header -->
        <div class="p-6">
            <h2 class="text-xl font-semibold">Confirm Delete</h2>
        </div>
        @*body*@

        <div class="p-6 py-0">
            <p>Are you sure you want to delete this posts</p>
        </div>
        @*footer*@
        <div class="flex justify-end p-6 text-sm font-medium">
            <form asp-controller="Home" asp-action="PostRemove">
                <input type="hidden" name="postId" id="deleteConfirmationPostid" value="" />
                <button type="button" class="px-4 py-1.5 rounded-md uk-modal-close">Cancel</button>
                <button type="submit" class="px-5 py-1.5 bg-gray-100 rounded-md">Delete</button>
            </form>
        </div>

        <!-- Close button -->
        <button type="button" class="bg-white rounded-full p-2 absolute right-0 top-0 m-3 uk-modal-close">
            <svg fill="#000000" width="60px" height="60px" viewBox="-0.45 -0.45 1.8 1.8" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMinYMin" class="jam jam-close"><path d="m0.549 0.443 0.265 -0.265A0.075 0.075 0 1 0 0.708 0.071L0.442 0.336 0.177 0.071A0.075 0.075 0 1 0 0.071 0.177l0.265 0.265L0.071 0.708a0.075 0.075 0 1 0 0.106 0.106l0.265 -0.265 0.265 0.265a0.075 0.075 0 1 0 0.106 -0.106L0.549 0.442z" /></svg><svg fill="#000000" width="60px" height="60px" viewBox="-0.45 -0.45 1.8 1.8" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMinYMin" class="jam jam-close"><path d="m0.549 0.443 0.265 -0.265A0.075 0.075 0 1 0 0.708 0.071L0.442 0.336 0.177 0.071A0.075 0.075 0 1 0 0.071 0.177l0.265 0.265L0.071 0.708a0.075 0.075 0 1 0 0.106 0.106l0.265 -0.265 0.265 0.265a0.075 0.075 0 1 0 0.106 -0.106L0.549 0.442z" /></svg>
        </button>
    </div>
</div>